<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.czw.project.activity.TourStoryMoreInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3c4f56">

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back"
            android:onClick="back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人游记"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/stat_notify_sync_noanim"
            android:onClick="refresh"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/id_list_comments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#f0d6ff">

        <EditText
            android:id="@+id/edit_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_reply"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="reply"
            android:background="@drawable/btn_send"/>
    </LinearLayout>

</LinearLayout>
