<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.czw.project.activity.PublishActivity">

    <RelativeLayout
        android:id="@+id/id_actionBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ba161418">

        <Button
            android:id="@+id/id_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/as4"
            android:onClick="back"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="发表游记"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/id_publish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/as7"
            android:layout_centerVertical="true"
            android:onClick="submit"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="标题"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:id="@+id/id_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_margin="5dp"
            android:imeOptions="actionDone"
            android:singleLine="false"
            android:gravity="bottom"
            android:textSize="35sp"
            android:hint=":"
            android:background="@null"/>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/image1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/addpicture"
            android:onClick="addPicture"
            android:background="#39362f11"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:id="@id/image2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/addpicture"
            android:onClick="addPicture"
            android:background="#39362f11"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:id="@id/image3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/addpicture"
            android:onClick="addPicture"
            android:background="#39362f11"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>
</LinearLayout>
