<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.czw.project.util.CircleImageView
        android:id="@+id/id_image_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/headphoto" />

    <TextView
        android:id="@+id/id_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_image_photo"
        android:paddingLeft="15dp"
        android:text="小明"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_text_name"
        android:layout_toRightOf="@id/id_image_photo"
        android:paddingLeft="15dp"
        android:paddingTop="1dp"
        android:text="2014-12-12"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/id_text_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_image_photo"
        android:layout_marginTop="10dp"
        android:text="..."
        android:textSize="19sp"
        android:textStyle="normal" />
</RelativeLayout>